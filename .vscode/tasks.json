{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "backend:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				//"ports": [{"containerPort": 8000, "hostPort": 8000, "protocol": "tcp"}],
				"customOptions": "-p 127.0.0.1:8000:8000",
				"volumes": [
					{ "containerPath": "/app", "localPath": "${workspaceFolder}"}
				]
			},
			"python": {
				"args": [
					"backend_django.asgi:application --reload --reload-include *.* --reload-exclude  *.log --reload-dir ./backend_django --log-level info --env-file ./.env.dev --host 0.0.0.0 --port 8000 "
					//"runserver",
					//"0.0.0.0:8000",
					//"--settings=backend_django.settings.debug"
					//"backend_django.asgi --bind 0.0.0.0:8000 --reload --env DJANGO_SETTINGS_MODULE=backend_django.settings.debug_local --capture-output --log-level debug -k uvicorn.workers.UvicornWorker -t 1 --workers 1 --threads 1 --timeout 12000"
				],

				//"file": "manage.py"
				//"module": "gunicorn"
				"module":"uvicorn"
			}
		}
	]
}