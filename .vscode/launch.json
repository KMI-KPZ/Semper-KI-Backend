{
    "configurations": [
        {
            "name": "Docker: Python - Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "serverReadyAction": {},
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "django",
                "justMyCode": false,
                "autoReload": {
                    "enable": true
                }
            }
        }
    ],
    "launchBrowser": {
        "enabled": false
    }
}